@model CustomerEditViewModel

<div class="container">
    @using (Html.BeginForm("Edit", "Customers", FormMethod.Post, new { @class = "" }))
    {
        <div>
            <label>First Name:</label>
            <span>
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { placeholder = "First Name" } })
            </span>
        </div>
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <div>
            <label>Last Name:</label>
            <span>
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { placeholder = "Last Name" } })
            </span>
        </div>
        <span asp-validation-for="LastName" class="text-danger"></span>
        <div>
            <label>Phone Number:</label>
            <span>
                @Html.EditorFor(model => model.PhoneNumer, new { htmlAttributes = new { placeholder = "Phone Number" } })
            </span>
        </div>
        <span asp-validation-for="PhoneNumer" class="text-danger"></span>
        <div>
            <label>E-mail:</label>
            <span>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "E-mail" } })
            </span>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
        <div>
            <label>Adult:</label>
            <span>
                @Html.EditorFor(model => model.IsAdult, new { htmlAttributes = new { placeholder = "Adult" } })
            </span>
        </div>
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Customers" class="btn btn-info">
            Back
        </a>
    }
</div>

